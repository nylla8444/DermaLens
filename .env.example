# DermaLens Environment Configuration Example
# Copy this file to .env and adjust values as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Model Configuration
MODEL_CHECKPOINT=./checkpoints/best_model.pth
DEVICE=cuda

# Dataset Configuration
DATASET_PATH=./dataset
IMAGE_SIZE=224

# Training Configuration
BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=100
EARLY_STOPPING_PATIENCE=15

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# Debug
DEBUG=false
